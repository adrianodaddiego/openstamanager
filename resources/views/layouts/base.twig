        <link rel="stylesheet" type="text/css" media="all" href="{{ base_path() }}{{ asset('/css/themes.css') }}"/>

        <link rel="stylesheet" type="text/css" media="print" href="{{ base_path() }}{{ asset('/css/print.css') }}"/>

        <script type="text/javascript" charset="utf-8" src="{{ base_path() }}{{ asset('/js/manifest.js') }}"></script>
        <script type="text/javascript" charset="utf-8" src="{{ base_path() }}{{ asset('/js/vendor.js') }}"></script>
        <script type="text/javascript" charset="utf-8" src="{{ base_path() }}{{ asset('/js/app.js') }}"></script>
