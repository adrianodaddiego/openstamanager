{% extends "layouts/guest.twig" %}

{% block title %}{{ "Errore di configurazione"|trans }}{% endblock %}

{% block box_class %}box-danger{% endblock %}
{% block box_header %}
    <h3 class="box-title">{{ 'Permessi di scrittura mancanti'|trans }}</h3>
{% endblock %}

{% block content %}
<p>{{  'Sembra che non ci siano i permessi di scrittura sul file _FILE_'|trans({'_FILE_': '<b>config.inc.php</b>'})|raw }}</p>

<form action="{{ url_for('configuration') }}" method="post">
    <div class="hidden">
        <input type="hidden" name="database_name" value="{{ database_name }}">
        <input type="hidden" name="username" value="{{ username }}">
        <input type="hidden" name="password" value="{{ password }}">
        <input type="hidden" name="host" value="{{ host }}">
    </div>

    <a class="btn btn-warning" href="{{ url_for('login') }}"><i class="fa fa-arrow-left"></i> {{ 'Torna indietro'|trans }}</a>

    <button class="btn btn-info"><i class="fa fa-repeat"></i> {{ 'Riprova'|trans }}</button>
</form>

<hr>

<div class="box box-outline box-default collapsed-box">
    <div class="box-header with-border">
        <h4 class="box-title"><a class="clickable" data-toggle="collapse">{{ 'Creazione manuale'|trans }}</a></h4>
        <div class="box-tools float-right">
            <button type="button" class="btn btn-box-tool" data-toggle="collapse"><i class="fa fa-plus"></i></button>
        </div>
    </div>
    <div class="box-body">
        <p>{{ 'Inserire il seguente testo nel file _FILE_'|trans({'_FILE_': '<b>config.inc.php</b>'})|raw }}</p>
        <pre class="text-left">{{ config }}</pre>
    </div>
</div>
{% endblock %}
